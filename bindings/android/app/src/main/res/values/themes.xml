<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NexaDemo" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/accent_green</item>
        <item name="android:colorAccent">@color/accent_green</item>
        <item name="android:windowBackground">@color/bg_normal</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/bg_normal</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DarkBottomSheetDialog" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:colorBackground">@color/bg_surface</item>
        <item name="colorPrimary">@color/accent_green</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorSurface">@color/bg_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
</resources>